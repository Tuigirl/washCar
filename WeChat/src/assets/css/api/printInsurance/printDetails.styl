@import './printList.css'

/*打印详情---start*/
.con > h5
  color: #A1A1A1
  font-weight: normal
  margin-top: 0.769rem
  padding-left: 1.5rem
  padding-right: 0.846rem
  font-size: 1.231rem
  line-height: 3.846rem
  color: #000
  background-color: #F5F5F5
  overflow: hidden
  display: flex
  align-items: center
  justify-content: space-between
  button
    float: right
    border: 1px solid #FFBB00
    border-radius: 5px
    width: 3.692rem
    height: 1.692rem
    color: #FFBB00
    font-size: 0.846rem
    &:focus
      outline: none
    [disabled]
      border: 1px solid #CCC
      color: #CCC

#printDetails
  font-size: 0.923rem
  section
    display: flex
    justify-content: center
    flex-direction: column

.car_info
  padding-left: 1.769rem
  background-color: white
  section
    height: 5.385rem
    &:nth-last-child(2)
      border-bottom: 1px solid #E5E5E5
  span
    color: #B7B7B7
  div:last-child
    margin-top: 6px
  .car div
    &:first-child
      font-size: 1.154rem
    &:last-child
      color: #A1A1A1

.card
  background-color: white
  padding: 0 1.846rem
  section
    padding: 1.538rem 0
  ul
    display: flex
    align-items: center
    white-space:nowrap
  strong.c_FB0
    font-size: 1.231rem
  .up_container
    position: relative
    &:after
      content: ""
      display: block
      position: absolute
      top: 100%
      left: -3%
      width: 106%
      height: 1px
      background-color: #E5E5E5
    &.no-after:after
      display: none
    ul
      &:not(:first-child)
        margin-top: 1.923rem
      li
        &:nth-child(1)
          // font-size: 1rem
        &:nth-child(2)
          width: 53px
          height: 16px
          margin-left: 10px
        &:nth-child(3)
          flex: 1
          text-align: right
          width: 1%
    span:first-child
      color: #A1A1A1
  &.car_insurance .down_container
    padding-top: 1rem
    ul
      &:not(:first-child)
        margin-top: 1.385rem
      li
        // width: 1%
        &:nth-child(1)
          margin-right: 1.231rem
          width: 2.538rem
          height: 2.538rem
          border-radius: 50%
          border: 1px solid #C8C8C8
        &:nth-child(2)
          flex: 0.5
        &:nth-child(3)
          flex: 0.5
          text-align: right
          padding-right: 0.538rem
  &.car_violation .nm
    position: relative
    div
      word-break: break-all
      width: calc(100% - 5em)
      min-width: 18em
      &.fact
        position: absolute
        top: 0
        left: 5em
      &.perch
        visibility: hidden;
        margin-top: calc(-1em - 8px);
  &.car_used
    .up_container ul li
      overflow: hidden
      text-overflow: ellipsis

.total_number
  font-size: 1rem
  &:before
    content: "￥"
  & + span
    color: #a1a1a1 !important
    font-size: 0.7em
/*打印详情---end*/

// 针对app
#printDetails[app-vessel]
  .car_used .down_container
      margin-top: -22px