@import '../../util'

font-color =  #898989

#all-box
  padding: 0 1.923rem 1.15rem
  font-size: 1.077rem
  color: font-color
  line-height: 1.846rem
  background: white
  .card
    padding: .8rem 0 1.154rem
    &:not(:last-child)
      border-bottom: 1px dashed #E5E5E5
    .desc
      padding-bottom: 0.769rem
    .pictrue
      display: flex
      justify-content: center
      align-content: center
      img
        width: 100%
        display: block
      ul
        width: 76%
        padding-left: 1.538rem
        display: flex
        flex-direction: column
        justify-content: center
        align-content: center
        li
          line-height: 2em
          solid-dot(font-color, 3px)
  .car-used
    div
      width 50%
      margin-right 1.538rem