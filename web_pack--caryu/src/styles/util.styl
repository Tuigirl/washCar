/* PX转REM */
to-rem(args..., datum = 13, result = '')
  datum = args[1] if args[1]
  for arg in args[0]
    result += unit(arg / datum, 'rem ')
  return s(result)
/* 文字单行 */
text-ellipsis()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
/* 绘制圆点 */
solid-dot(color = black, w = 8px, h = w)
  display flex
  align-items center
  &:before
    content ''
    display inline-block
    width w
    height h
    margin-right 6px
    border-radius 50%
    background-color color
/* 图片垂直居中 */
img-middle(el = 'img')
  &:before
    content:"center";
    display:inline-block;
    overflow:hidden;
    vertical-align:middle;
    width:0;
    height:100%;
  {el}
    vertical-align: middle;
/**
* 主题配色
* {Color1, Color2, Color3...}
*/
theme-init(theme...)
  #gl-header,
  #gl-left-nav,
  #gl-left-nav ul,
  .l-layout-top,
  .l-layout-left
    background-color: theme[0]
  #global_layout #gl-header:after
    content: ''
    display: block
    position: absolute
    top: 100% - 4px
    width: 100%
    height: 4px
    background-color: theme[1]
  .el-tabs__item.is-active
    color: theme[1]
  .el-tabs__active-bar
    background-color: theme[1]